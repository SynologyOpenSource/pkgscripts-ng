if [ -z "$__INCLUDE_VARIABLE__" ]; then
__INCLUDE_VARIABLE__=defined

ConfDir="SynoBuildConf"

# Directory for all compile logs
LogDir="/logs"

# We will install to $TmpInstDir dir and make a tgz file to $TarBallDir
