DebugTarBallDir="${ImageDir}/synodebug"
TmpInstDir="/tmp/_install"

DebDir="/deb"
DebDevBuild="${DebDir}/build"
DebDevDir="${DebDir}/tmpInstallDir"
DebPkgDir="${DebDir}/result"
GlobalDependConf="include/project.depends"

DEFAULT_CCACHE_SIZE="3G"

fi # header guard
